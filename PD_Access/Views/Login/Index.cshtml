@model PD_Access.Models.Login
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Adjust as per your project
}

<div class="login-container">
    <div class="login-box">
        <h2 class="login-title">Login</h2>
        @if (ViewBag.Message != null)
        {
            <div class="alert alert-danger">@ViewBag.Message</div>
        }
        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.LabelFor(m => m.Username, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Enter username" })
                @Html.ValidationMessageFor(m => m.Username)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Enter password" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>
            <button type="submit" class="btn btn-primary btn-block">Login</button>
        }
        <div class="register-link">
            Don't have an account? <a href="@Url.Action("Register", "Account")">Get started.</a>
        </div>
    </div>
</div>

<style>
    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 80vh;
        background: #f8f9fa;
    }

    .login-box {
        background: #fff;
        padding: 2.5rem 2rem;
        border-radius: 8px;
        box-shadow: 0 2px 16px rgba(0,0,0,0.08);
        min-width: 350px;
    }

    .login-title {
        text-align: center;
        margin-bottom: 1.5rem;
        font-weight: bold;
    }

    .form-group {
        margin-bottom: 1.2rem;
    }

    .btn-block {
        width: 100%;
    }

    .register-link {
        margin-top: 1rem;
        text-align: center;
    }
</style>


